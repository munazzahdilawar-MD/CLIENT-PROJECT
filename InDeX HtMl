  <!-- =========================
       SCRIPT (JavaScript)
       Split into script.js if you want external files
  ========================== -->
  <script>
    const toJSON = () => ({
      client: "cihancan424",
      domain: "ancigroup.com",
      industry: ["eBay Wholesale", "eBay Dropshipping", "Amazon Private Label"],
      objective: "Convert dropshipping to wholesale with stock; home décor ≥ $30",
      procurement: "Bulk 50–100+ units from US/China; store & ship from own warehouse",
      profitable_safe: true,
      markets: ["United States", "Canada", "Germany"],
      current_listings: { us: 2200, ca: 2000 },
      plan_this_month: { us: 3000, ca: 3000, de: 1000 },
      attachments: ["top_selling_autods_dashboard.pdf"]
    });

    function copySummary(){
      const summary = `CLIENT: cihancan424\nDOMAIN: ancigroup.com\nINDUSTRY: eBay Wholesale, eBay Dropshipping, Amazon Private Label\nOBJECTIVE: Convert dropshipping to wholesale with stock (home décor ≥ $30)\nPROCUREMENT: Bulk 50–100+ units from US/China; store & ship from own warehouse\nPROFITABLE & SAFE: Yes\nTARGET MARKETS: United States, Canada, Germany\nCURRENT LISTINGS: US 2,200 · CA 2,000\nPLAN (THIS MONTH): US 3,000 · CA 3,000 · DE 1,000\nATTACHMENTS: top_selling_autods_dashboard.pdf`;
      navigator.clipboard.writeText(summary).then(()=>{
        const note = document.getElementById('note');
        note.textContent = 'Summary copied to clipboard!';
        note.style.borderLeftColor = '#10b981';
      }).catch(()=>alert('Clipboard permission required'));
    }

    function downloadJSON(){
      const data = toJSON();
      const blob = new Blob([JSON.stringify(data,null,2)], {type:'application/json'});
      const url = URL.createObjectURL(blob);
      const a = document.createElement('a');
      a.href = url; a.download = 'cihancan424_requirements.json';
      document.body.appendChild(a); a.click(); a.remove(); URL.revokeObjectURL(url);
    }

    document.getElementById('copy').addEventListener('click', copySummary);
    document.getElementById('download').addEventListener('click', downloadJSON);
  </script>
